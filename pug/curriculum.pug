section#curriculum.main-curriculum.scrollspy
  .container
    .row
      .col.s12
        h2.main-curriculum__title.main--title Curriculum vitae
        h3.main-curriculum__subtitle.main--subtitle Algunos lugares donde prob√© mis Habilidades
    .row.main-curriculum__container
      .col.s12
          .row.main-curriculum__content
            .col.s12.m4.l3
              h5.main-curriculum__content--category Education
            .col.s12.m8.l9
              each curse in education
                .row
                  .col.s12.m9.main-curriculum__content--data
                    h6.main-curriculum__content--title= curse.title
                    h7.main-curriculum__content--subtitle
                      i.material-icons domain
                      | #{curse.address}
                    p.main-curriculum__content--description= curse.description
                  .col.s12.m3
                    p.main-curriculum__content--date
                      i.material-icons event
                      | #{curse.graduation}
          .row.main-curriculum__content
            .col.s12.m4.l3
              h5.main-curriculum__content--category Experience
            .col.s12.m8.l9
              each exp in experience
                .row
                  .col.s12.m9.main-curriculum__content--data
                    h6.main-curriculum__content--title= exp.title
                    h7.main-curriculum__content--subtitle
                      i.material-icons domain
                      | #{exp.address}
                    p.main-curriculum__content--description= exp.description
                  .col.s12.m3
                    p.main-curriculum__content--date
                      i.material-icons event
                      | #{exp.graduation}
      .col.s12
        a.waves-effect.waves-light.btn-large.main-curriculum__button.main-button__black
          i.material-icons.left file_download
          | Descargar mi cv